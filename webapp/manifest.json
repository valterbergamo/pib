{
	"_version": "1.12.0",

	"sap.app": {
		"id": "pib.cafelandia.app",
		"type": "application",
		"i18n": "i18n/i18n.properties",
		"title": "{{appTitle}}",
		"description": "{{appDescription}}",
		"applicationVersion": {
			"version": "1.0.0"
		},
        "dataSources": {
            "default": {
				"uri": "odata//boost/v1/",
				"type": "OData",
				"settings": {
					"odataVersion": "4.0",
					"headers": {
						"Accept": "application/json"
					}
					
				}
			}
        }
	},

	"sap.ui": {
		"technology": "UI5",
		"icons": {},
		"deviceTypes": {
			"desktop": true,
			"tablet": true,
			"phone": true
		},
		"supportedThemes": [
			"sap_hcb",
			"sap_bluecrystal",
			"sap_fiori_3",
			"sap_horizon"
		]
	},

	"sap.ui5": {
		"rootView": {
			"viewName": "pib.cafelandia.app.view.App",
			"type": "XML",
			"async": true,
			"id": "app"
		},
		"resources": {
			
			"css": [
			  {
				"uri": "css/style.css"
			  }
			]
		},

		"dependencies": {
			"minUI5Version": "1.30",
			"libs": {
				"sap.ui.core": {},
				"sap.m": {},
				"sap.tnt": {},
				"sap.ui.layout": {},
				"sap.uxap": {}
				
			}
		},

		"handleValidation": true,

		"contentDensities": {
			"compact": true,
			"cozy": true
		},

		"models": {
			"i18n": {
				"type": "sap.ui.model.resource.ResourceModel",
				"settings": {
					"bundleName": "pib.cafelandia.app.i18n.i18n"
				}
			},
			"side": {
				"type": "sap.ui.model.json.JSONModel",
				"uri": "model/sideContent.json"
			},
            "": {
				"dataSource": "default",
			    "preload": true,
				"settings": {
					"autoExpandSelect": true,
					"earlyRequests": true,
					"operationMode": "Server"
					
				  }
            }
		},
		"routing": {
			"config": {
				"routerClass": "sap.m.routing.Router",
				"viewType": "XML",
				"viewPath": "pib.cafelandia.app.view",
				"controlId": "mainContents",
				"controlAggregation": "pages",
				"async": true
			},
			"routes": [
				{
					"pattern": "",
					"name": "main",
					"target": "main"
				}
			],
			"targets": {
				"main": {
					"viewId": "main",
					"viewName": "Main"
				}
			}
		}
	}
}
